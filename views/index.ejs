<body>

    <h1>Home</h1>
    <%- include("./partials/nav.ejs") %>
    <div class="container-all-blogs">
        <% if(blogs.length>0){
            blogs.forEach(blog =>{ %>
                <div class="container-blog">        
                    <a href="/<%= blog._id %>"><h3><%= blog.title %></h3>
                    <h4><%= blog.snippet %></h4>
                </div>
            <% }) 
        } else { %>
            <h3>There are no blogs</h3>
        <% } %>
    </div>

    //if using locals.blogs and blogs does not exist it will display nothing
    //to check and otherwise use default value use if typeof == undefined 

